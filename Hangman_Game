

import random

def display_intro():
    print("===============================================")
    print("         ğŸ¯ WELCOME TO HANGMAN GAME ğŸ¯         ")
    print("===============================================\n")
    print("ğŸ“ INSTRUCTIONS:")
    print("You must guess the hidden word, one letter at a time..")
    print("You have 6 wrong attempts before losing.")
    print("Type lowercase letters only (aâ€“z).")
    print("\n")

def display_hangman(attempts):
    stages = [
        """
           +---+
           |   |
           O   |
          /|\\  |
          / \\  |
               |
        =========""",
        """
           +---+
           |   |
           O   |
          /|\\  |
          /    |
               |
        =========""",
        """
           +---+
           |   |
           O   |
          /|\\  |
               |
               |
        =========""",
        """
           +---+
           |   |
           O   |
          /|   |
               |
               |
        =========""",
        """
           +---+
           |   |
           O   |
           |   |
               |
               |
        =========""",
        """
           +---+
           |   |
           O   |
               |
               |
               |
        =========""",
        """
           +---+
           |   |
               |
               |
               |
               |
        ========="""
    ]
    print(stages[6 - attempts])

def hangman():
   
    word_hint_pairs = {
        "python": "ğŸ A popular programming language.",
        "school": "ğŸ« A place where students learn.",
        "flower": "ğŸŒ¸ Something beautiful that blooms.",
        "rocket": "ğŸš€ Used to travel to space.",
        "engineer": "ğŸ‘·â€â™‚ï¸ A person who designs or builds things."
    }

    
    secret_word, hint = random.choice(list(word_hint_pairs.items()))
    guessed_word = ["_"] * len(secret_word)
    guessed_letters = []
    attempts = 6

    display_intro()
    print(f"ğŸ’¡ HINT: {hint}\n")

    while attempts > 0 and "_" in guessed_word:
        display_hangman(attempts)
        print("\nğŸ”¤ Word:", " ".join(guessed_word))
        print("ğŸ“˜ Letters you tried:", ", ".join(guessed_letters) if guessed_letters else "None")
        print(f"â¤ï¸ Chances left: {attempts}")
        print("-----------------------------------------------")

        guess = input("ğŸ‘‰ Enter a letter: ").lower().strip()

        if len(guess) != 1 or not guess.isalpha():
            print("âš ï¸  Please enter a single valid letter!\n")
            continue

        if guess in guessed_letters:
            print("ğŸ˜… You already guessed that letter!\n")
            continue

        guessed_letters.append(guess)

        if guess in secret_word:
            print(f"âœ… Correct guess...\n Great..!!!\n '{guess}' is in the word!\n")
            for i in range(len(secret_word)):
                if secret_word[i] == guess:
                    guessed_word[i] = guess
        else:
            attempts -= 1
            print(f"âŒ Oops!!!...Wrong guess\n '{guess}' is not in the word. You lost one chance.\n")

    display_hangman(attempts)
    print("-----------------------------------------------")

    if "_" not in guessed_word:
        print("ğŸ‰ CONGRATULATIONS ğŸ‰")
        print("You guessed the word correctly!")
        print("âœ… The word was:", secret_word)
        print("ğŸ† You aare a Hangman Master!\n")
    else:
        print("ğŸ’€ GAME OVER ğŸ’€")
        print("The correct word was:", secret_word)
        print("Better luck next time!\n")


if __name__ == "__main__":
    hangman()
