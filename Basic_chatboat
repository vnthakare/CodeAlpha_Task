

def chatbot():
    print("ğŸ¤– Chatbot: Hello! I'm your friendly chatbot.")
    print("Type 'bye' anytime to exit.\n")

    while True:
        user_input = input("You: ").lower().strip()

        if user_input == "hello":
            print("ğŸ¤– Chatbot: Hi there!")

        elif user_input == "how are you":
            print("ğŸ¤– Chatbot: I'm fine, thanks for asking! How about you?")

        elif user_input in ["i am fine", "good", "fine"]:
            print("ğŸ¤– Chatbot: Glad to hear that! ğŸ˜Š")

        elif user_input == "what is your name":
            print("ğŸ¤– Chatbot: I am a simple Python chatbot created by you!")

        elif user_input == "bye":
            print("ğŸ¤– Chatbot: Goodbye! Have a great day! ğŸ‘‹")

            break

        else:
            print("ğŸ¤– Chatbot: Sorry, I don't understand that.")


